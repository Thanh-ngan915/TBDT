@model IEnumerable<OrderModel>
@{
    ViewData["Title"] = "Đơn hàng";
}


<h2>List Order</h2>
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">OrderCode</th>
        <th scope="col">Username</th>
        <th scope="col">OrderDate</th>
        <th scope="col">Status</th>

    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th>#</th>
            <th scope="row">@item.OrderCode</th>
            <td>@item.Username</td>
            <td>@item.OrderDate</td>'

            <td>
                @if (item.status == 1)
                {
                    <span class="text text-success">Đơn hàng chưa xử lý</span>

                }
                else
                {
                    <span class="text text-danger">Đơn hàng đã xử lý</span>

                }
            </td>

            <td>
                <a asp-action="ViewOrder" class=" btn warning btn-sm" asp-controller="Order" asp-route-orderCode="@item.OrderCode">View</a>
                @*
                <a asp-action="Delete" class="btn danger btn-sm confirmDeletion" asp-controller="Order" asp-route-id="@item.Id">Delete</a>
                *@

            </td>



        </tr>

    }



    </tbody>
</table>

